<div class="title-div">
  <div class="arrow-div">
    <%= link_to url_for(:back) do %>
      <i class="fa-solid fa-chevron-left fa-lg arrow"></i>
    <% end %>
    <h2>Favorite farms</h2>
  </div>
</div>

<% @farms.each do |farm| %>
  <div class="farm-card">
    <%= link_to farm_path(farm) do %>
      <img src="https://res.cloudinary.com/dpfoq3knh/image/upload/v1692648557/production/v8q0d0r2z3jr5sq5szjj1xvju8wf.jpg" class="farm-card-img-fav" alt="<% farm.name %>">
    <% end %>

    <div class="farm-card-body"
      data-controller="favorite"
      data-favorite-page-value="favorites">
      <div class="farm-fav-div">
        <div class="farm-name-div">
          <% if farm.open %>
            <i class="fa-solid fa-circle fa-sm open-margin open"></i>
          <% else %>
            <i class="fa-solid fa-circle fa-sm open-margin close"></i>
          <% end %>
          <h2><%= farm.name %></h2>
        </div>
        <%= render "heart", farm: farm %>
      </div>

      <p><%= farm.address %></p>
      <div class="rating-div">
        <strong><p class="rating-text"><%= farm.rating %></p></strong>
        <i class="fa-solid fa-star fa-sm star"></i>
      </div>
    </div>
  </div>
<% end %>
