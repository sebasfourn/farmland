<div class="container" data-controller="chatroom-subscription">
  <h1>You're chatting with <%= @trip.user.first_name %></h1>

  <% @trip.messages.each do |message| %>
    <div>
      <small>
        <strong><%= message.user.first_name.capitalize %></strong>
        <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
      </small>
      <p><%= message.content %></p>
    </div>
  <% end %>

  <%= simple_form_for [@trip, @message], html: {class: "d-flex"} do |f| %>
    <%= f.input :content,
      label: false,
      placeholder: "Aa",
      wrapper_html: {class: "flex-grow-1"}
    %>
    <%= f.submit "Send", class: "btn btn-primary mb-3" %>
  <% end %>

</div>
